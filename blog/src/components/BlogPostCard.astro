---
interface Post {
  number: number;
  title: string;
  date: string;
  excerpt: string;
  topics: string[];
  color: string;
  slug: string;
}

const { post } = Astro.props as { post: Post };
---

<article class="post-card" data-topics={post.topics.join(',')}>
  <a href={`/posts/${post.slug}`} class="post-link">
    <div class="post-number">#{post.number}</div>
    <h2 class="post-title">{post.title}</h2>
    <div class="progress-bar" style={`background-color: ${post.color}`}></div>
    <time class="post-date">{post.date}</time>
    <p class="post-excerpt">{post.excerpt}</p>
  </a>
</article>

<style>
  .post-card {
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    padding: 1.5rem;
    transition: all 0.2s;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .post-card:hover {
    border-color: #cbd5e0;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .post-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .post-number {
    color: #3182ce;
    font-weight: 600;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .post-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0 0 0.75rem 0;
    color: #1a1a1a;
    line-height: 1.4;
  }

  .progress-bar {
    width: 100%;
    height: 3px;
    border-radius: 2px;
    margin-bottom: 0.75rem;
  }

  .post-date {
    color: #718096;
    font-size: 0.85rem;
    margin-bottom: 0.75rem;
    display: block;
  }

  .post-excerpt {
    color: #4a5568;
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0;
    flex-grow: 1;
  }
</style>
