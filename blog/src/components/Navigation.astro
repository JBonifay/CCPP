---
const { tabs, activeTab } = Astro.props;
---

<nav class="navigation">
  {tabs.map((tab: { name: string; slug: string }) => (
    <a
      href={tab.slug ? `${import.meta.env.BASE_URL}${tab.slug}` : import.meta.env.BASE_URL}
      class={`nav-tab ${activeTab === tab.slug ? 'active' : ''}`}
    >
      {tab.name}
    </a>
  ))}
</nav>

<style>
  .navigation {
    display: flex;
    gap: 2rem;
    margin-bottom: 2rem;
    border-bottom: 1px solid #e2e8f0;
  }

  .nav-tab {
    padding: 0.75rem 0;
    color: #4d4d4d;
    text-decoration: none;
    font-size: 1rem;
    border-bottom: 2px solid transparent;
    transition: all 0.2s;
  }

  .nav-tab:hover {
    color: #000000;
  }

  .nav-tab.active {
    color: #000000;
    border-bottom-color: #000000;
  }
</style>
