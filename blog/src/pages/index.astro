---
import Sidebar from '../components/Sidebar.astro';
import Navigation from '../components/Navigation.astro';
import TopicFilter from '../components/TopicFilter.astro';
import PostsGrid from '../components/PostsGrid.astro';
import { getCollection } from 'astro:content';

// Get all posts from content/posts
const posts = await getCollection('posts');

const sidebarData = {
  name: "Joffrey B.",
  bio: "I'm Joffrey, a software engineer from France.",
  currentProject: {
    name: "",
    url: ""
  },
  pastProject: {
    name: "",
    url: ""
  },
  socialLinks: {
    github: "https://github.com/JBonifay",
    linkedin: "https://www.linkedin.com/in/joffrey-io/"
  }
};

const tabs = [
  { name: "Content creator planer", slug: "" },
  // { name: "Rides", slug: "rides" }
];

const topics = ["DDD", "DevOps", "Backend", "Frontend", "MISC"];

// Sort posts by number in descending order (newest first)
const sortedPosts = [...posts].sort((a, b) => b.data.number - a.data.number);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Joffrey B. - Software Engineer</title>
  </head>
  <body>
    <div class="container">
      <Sidebar {...sidebarData} />

      <main class="main-content">
        <Navigation tabs={tabs} activeTab="" />
        <TopicFilter topics={topics} />
        <PostsGrid posts={sortedPosts} />
      </main>
    </div>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    background-color: #f7fafc;
    color: #1a1a1a;
    line-height: 1.6;
  }

  .container {
    display: flex;
    min-height: 100vh;
  }

  .main-content {
    margin-left: 360px;
    padding: 2rem;
    flex: 1;
    max-width: 1600px;
  }

  @media (max-width: 768px) {
    .main-content {
      margin-left: 0;
      padding: 1rem;
    }
  }
</style>
